<center>
<h2>マンガ編集</h2>
  <%= form_for(@comic) do |f| %>

     <h4>作品名</h4>
     <%= f.text_field :title %>

     <h4>作品名（カナ）</h4>
     <%= f.text_field :title_kana %>

     <h4>作者</h4>
     <%= f.text_field :author %>

     <h4>出版社</h4>
     <%= f.text_field :publisher %>

     <h4>あらすじ</h4>
     <%= f.text_area :story %>

     <h4>既刊</h4>
     <%= f.number_field :back_number %><br>

     <%= f.submit  '更新', class:"btn btn-primary btn-block" %>
  <% end %>
</center>
<li>
  <%= link_to 'トップページ', root_path %>
</li>

<li>
  <%= link_to 'マンガ一覧', comics_path %>
</li>

<li>
  <%= link_to 'マンガ追加', new_comic_path %>
</li>