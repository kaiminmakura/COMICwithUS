<center class="background-content">
<h2>マンガ一覧</h2>
<%= form_tag(comics_path, :method => 'get') do %>
  <%= text_field_tag "search", "", :placeholder =>"作品名:カタカナ" %>
  <%= submit_tag 'Search', :title_kana => nil %>
<% end %>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>作品名</th>
      <th>レビュー平均</th>
    </tr>
  </thead>
  <% @comics.each do |comic| %>
  <tbody>
      <td></td>
      <td>
        <%= link_to comic_path(comic) do %>
            <%= comic.title %>
        <% end %>
      </td>
      <td class="average-review-rating" data-score="<%= comic.reviews.average(:rank) %>"></td>
  </tbody>
  <% end %>
</table>
<%= paginate @comics %>
</center>

<script>
  $('.average-review-rating').raty({
    readOnly: true,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>