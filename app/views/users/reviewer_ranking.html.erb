<div class="container">
  <div class="row">
    <table class="table table-hover table-inverse">
	  <thead>
	    <tr>
	      <th>レビュワーランキング</th>
	    </tr>
	  </thead>
	  <% @all_ranks.each.with_index(1) do |user, i| %>
	  <tbody>
	    <tr>
	      <td><%= i %>位</td>
  		  <td>
  		    <%= link_to user_path(user) do %>
  		      <%= user.name %>
  		    <% end %>
  		  </td>
  	    </tr>
	  </tbody>
	  <% end %>
    </table>
  </div>
</div>